GridLayout:
    rows: 5
    cols:4
    TextInput:
        id:entry
        font_size: 30
        multiline: False
        background_color: 0, 0, 0, 1
        foreground_color: 1, 1, 1, 1
        font_size: 40
    
    TextInput:
        id:show
        font_size: 30
        multiline: False
        background_color: 0, 0, 0, 1
        foreground_color: 1, 1, 1, 1
        font_size: 40

    Button:        
        text: '/'
        on_press: entry.text += self.text
        background_color: 0.2, 0.2, 0.2, 1
        font_size:50

    Button:
        text: 'Borrar'
        on_press: entry.text = ""
        on_press: show.text = ""    
        background_color: 0.2, 0.2, 0.2, 1
        font_size:30


    Button:
        text: '<--'
        background_color: 0.2, 0.2, 0.2, 1
        on_press: entry.text = entry.text[:-1] 
        font_size:50

    Button:
        text: '7'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:
        text: '8'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1

    Button:
        text: '9'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:        
        text: '+'
        on_press: entry.text += self.text
        background_color: 0.2, 0.2, 0.2, 1
        font_size:50
    Button:        
        text: '4'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:
        text: '5'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1

    Button:        
        text: '6'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:        
        text: '-'
        on_press: entry.text += self.text
        background_color: 0.2, 0.2, 0.2, 1
        font_size:50

    Button:        
        text: '1'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:
        text: '2'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:        
        text: '3'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1
    Button:
        text: '*'
        on_press: entry.text += self.text
        background_color: 0.2, 0.2, 0.2, 1
        font_size:50

    Button:
        text: '='
        on_press: show.text = "=" + str(eval(entry.text))
        font_size:50
    Button:
        text: '0'
        on_press: entry.text += self.text
        background_color: 0.1, 0.5, 0.6, 1







